change:notify:
  stage: notify
  only:
    - main
  needs:
    - file-upload
  image: docker:dind
  variables:
    TIME: 10
    TELEGRAM_BOT_TOKEN: ${TELEGRAM_BOT_TOKEN}
    URL: https://api.telegram.org/bot$TELEGRAM_BOT_TOKEN/sendMessage
    TELEGRAM_CHAT_ID: ${TELEGRAM_CHAT_ID}
    TEXT: '"Modify sauser.cf: $CI_PROJECT_NAME URL:+$CI_PROJECT_URL/pipelines/$CI_PIPELINE_ID/ Branch:+$CI_COMMIT_REF_SLUG"'
  before_script:
    - apk add --update curl && rm -rf /var/cache/apk/*
  script:
    - curl -s --max-time $TIME -d "chat_id=$TELEGRAM_CHAT_ID&disable_web_page_preview=1&text=$TEXT" $URL > /dev/null
  only:
    refs:
      - main
    changes:
      - "*.cf"
  tags:
  - runner-docker


## notify
notify_error:
  stage: notify
  image: docker:dind
  before_script:
    - apk add --update curl && rm -rf /var/cache/apk/*
  script:
    - sh ./alert_notify.sh ‚ùå
  when: on_failure
  tags:
  - runner-docker
